class Solution {
    public int longestSubarray(int[] arr, int k) {
        Map<Integer,Integer> map = new HashMap<>();
        
        int preSum = 0;
        int longSubstr = 0;
        
        for(int i = 0; i < arr.length; i++){
            preSum += arr[i];
            
            if(preSum == k){
                longSubstr = i+1;
            }
            
            if(map.containsKey(preSum - k)){
                longSubstr = Math.max(longSubstr,i - map.get(preSum - k));
            }
            
            if(!map.containsKey(preSum)){
                map.put(preSum,i);
            }
            
        }
        return longSubstr;
    }
}
